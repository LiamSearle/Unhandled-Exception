<Window x:Class="Calculator_Project.ConeVolumeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator_Project"
        mc:Ignorable="d"
        Title="ConeVolumeWindow" Height="300" Width="383">
    <Grid>
        <Label x:Name="label" Content="Volume of a Cone" HorizontalAlignment="Left" Margin="115,10,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label x:Name="label1" Content="The formula for volume of a cone is 1/3*pi*radius*radius*height" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Radius:" HorizontalAlignment="Left" Margin="43,95,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.316,0.462"/>
        <TextBox x:Name="radius" HorizontalAlignment="Left" Height="23" Margin="96,95,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label3" Content="Height:" HorizontalAlignment="Left" Margin="43,126,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="height" HorizontalAlignment="Left" Height="23" Margin="96,126,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button" Content="Calculate" HorizontalAlignment="Left" Margin="96,168,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Label x:Name="label4" Content="Output:" HorizontalAlignment="Left" Margin="43,209,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="output" HorizontalAlignment="Left" Height="23" Margin="98,209,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
