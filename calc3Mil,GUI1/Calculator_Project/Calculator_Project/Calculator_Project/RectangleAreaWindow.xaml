        mc:Ignorable="d"
        Title="RectangleAreaWindow" Height="300" Width="332.701">
    <Grid>
        <Label x:Name="label" Content="Area of a Rectangle" HorizontalAlignment="Left" Margin="64,10,0,0" VerticalAlignment="Top" Width="231" FontSize="22"/>
