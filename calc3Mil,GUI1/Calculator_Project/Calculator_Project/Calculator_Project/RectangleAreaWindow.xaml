        <Label x:Name="width" Content="Width Input:" HorizontalAlignment="Left" Margin="36,121,0,0" VerticalAlignment="Top" Width="80"/>
        <TextBox x:Name="width_input" HorizontalAlignment="Left" Height="23" Margin="121,124,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
